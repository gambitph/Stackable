/**
 * External dependencies
 */
import { isPro, i18n } from 'stackable'
import { numShapeInSvg } from '~stackable/util'

/**
 * Internal dependencies
 */
import { getIconGradientId } from './util'

/**
 * WordPress dependencies
 */
import { addFilter } from '@wordpress/hooks'
import { __ } from '@wordpress/i18n'

const MultiColorControls = props => {
	const numPaths = props.numPaths
}

if ( isPro ) {
	addFilter( 'stackable.block-component.icon.color-type', 'icon/multicolor', colorTypes => {
		return [
			...colorTypes,
			{
				value: 'multicolor',
				title: __( 'Multicolor', i18n ),
				show: props => props.hasMultiColor,
				controls: MultiColorControls,
			},
		]
	} )
}

